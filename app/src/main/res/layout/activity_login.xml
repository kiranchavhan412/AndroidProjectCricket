<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="398dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="158dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        app:srcCompat="@android:color/holo_green_dark"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="309dp"
        android:layout_height="508dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        android:background="@drawable/shadow_background"
        android:elevation="6dp"
        android:scaleType="centerCrop"


        android:translationZ="6dp"
        app:cardCornerRadius="15dp">


        <RelativeLayout
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:background="@drawable/image3"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:padding="8dp"
                android:text="Let's get started"
                android:textColor="@color/black"
                android:textSize="28sp" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="100dp"
                android:drawableLeft="@drawable/ic_baseline_email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_above="@+id/phone"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-4dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="160dp"
                android:layout_marginBottom="-210dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="200dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/signin"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="140dp"
                android:background="@drawable/shadow_button_layer_list"
                android:backgroundTint="@color/green"
                android:text="Sign In"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="91dp"
                android:layout_height="11dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="91dp"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginBottom="166dp"
                app:srcCompat="@android:color/black" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/reg_login_now_layout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="4dp"
                android:text="Don't have an account?"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/register_now"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:text="register here"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="155dp"
        app:srcCompat="@color/green" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="190dp"
        app:srcCompat="@android:color/holo_green_dark" />


</FrameLayout>