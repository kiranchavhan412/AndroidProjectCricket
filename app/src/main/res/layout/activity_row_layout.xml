<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:clipToPadding="true"
    android:background="@drawable/gradient"
    card_view:cardBackgroundColor="@color/green1"
    card_view:cardElevation="7dp"
    card_view:cardCornerRadius="15dp"
    card_view:contentPadding="7dp">


    <RelativeLayout
        android:layout_width="378dp"
        android:layout_height="146dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"

        android:background="@color/green2">


        <ImageView
            android:id="@+id/image"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_baseline_batch" />

        <TextView
            android:id="@+id/batchtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/agegroup"
            android:layout_alignLeft="@+id/agegroup"
            android:layout_alignTop="@+id/textView3"
            android:fontFamily="@font/aclonica"
            android:linksClickable="true"
            android:text="batchtype"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/agegroup"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/aclonica"
            android:linksClickable="true"

            android:text="agegroup"
            android:textColor="#d60214"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/aclonica"
            android:text="Batch Type :"
            android:textColor="@android:color/background_dark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/allerta"
            android:text="Age  Group :"
            android:textColor="@android:color/background_dark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="191dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/oval"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="View Details"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>