<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:layout_margin="5dp"
    android:clipToPadding="true"
    android:background="@drawable/gradient"

    card_view:cardElevation="7dp"
    card_view:cardCornerRadius="15dp"
    card_view:contentPadding="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners">


        <TextView
            android:id="@+id/bid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:linksClickable="true"
            android:text="https://abhiandroid.com"
            android:textColor="#000"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="67dp"
            android:layout_height="29dp"
            android:layout_alignStart="@+id/discount"
            android:layout_alignTop="@+id/textView6"
            android:linksClickable="true"
            android:text="10000"
            android:textColor="#000"
            android:layout_alignLeft="@+id/discount" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginBottom="156dp"
            android:text="Fee"
            android:layout_alignLeft="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="119dp"
            android:layout_toStartOf="@+id/imageView4"
            android:text="Discount"
            android:layout_toLeftOf="@+id/imageView4" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginEnd="58dp"
            android:text="discount"
            android:layout_alignParentRight="true"
            android:layout_marginRight="58dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginBottom="82dp"
            android:text="Total Due"
            android:layout_alignLeft="@+id/textView6" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fee"
            android:layout_alignTop="@+id/textView9"
            android:text="Total"
            android:layout_alignLeft="@+id/fee" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView4"
            android:layout_width="134dp"
            android:layout_height="91dp"
            android:layout_above="@+id/textView17"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-106dp"
            android:scaleType="centerCrop"
            android:src="@drawable/c1logo" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="199dp"
            android:text="Batchtype"
            android:layout_alignRight="@+id/textView7" />

        <TextView
            android:id="@+id/batchtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fee"
            android:layout_alignTop="@+id/textView11"
            android:text="batchtype"
            android:layout_alignLeft="@+id/fee" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_centerVertical="true"
            android:text="Agegroup"
            android:layout_alignRight="@+id/textView7" />

        <TextView
            android:id="@+id/agegroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/batchtype"
            android:layout_alignTop="@+id/textView13"
            android:text="agegroup"
            android:layout_alignLeft="@+id/batchtype" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="106dp"
            android:text="Club Like Never Before." />

        <Button
            android:id="@+id/btnpay"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView9"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="-69dp"
            android:background="@drawable/gradient"
            android:text="Proceed to pay"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>